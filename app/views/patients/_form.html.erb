<!-- Using the simple form gem to create a for adding a patient -->
<%= simple_form_for @patient, :html => { :multipart => true } do |f| %>
	<%= select_tag(:clinic_id, options_for_select(@clinics), :prompt => "Select a clinic") %>
	<br></br>
	<%= f.input :name, label: "Patient Name" %>
	<%= f.input :dob, label: "Date of Birth", start_year: Date.today.year - 110, end_year: Date.today.year %>
	<%= f.input :address, label: "Address" %>
	<%= f.input :phone, label: "Phone Number" %>
	<%= f.button :submit %>
<% end %>